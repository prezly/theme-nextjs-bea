{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es2022"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "module": "es2022",
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
//      "@/adapters/client": ["adapters/client"],
//      "@/adapters/server": ["adapters/server"],
//      "@/components/*": ["components/*"],
//      "@/hooks": ["hooks/"],
//      "@/icons": ["icons/"],
//      "@/modules/*": ["modules/*"],
//      "@/public/*": ["public/*"],
//      "@/styles/*": ["styles/*"],
//      "@/utils": ["utils/"],
//      "@prezly/theme-kit-nextjs/middleware": ["node_modules/@prezly/theme-kit-nextjs/build/middleware/server"],
//      "@prezly/theme-kit-nextjs/*": ["node_modules/@prezly/theme-kit-nextjs/build/*"]
    }
  },
  "include": [
//    "custom-next-env.d.ts",
    "remix.env.d.ts",
    "@types/*",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.cjs",
    "*.config.js",
    "playwright.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "_pages",
    "node_modules",
    "next-env.d.ts"
  ]
}

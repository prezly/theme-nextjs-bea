{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2019"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["components/*"],
            "@/contexts/*": ["contexts/*"],
            "@/hooks/*": ["hooks/*"],
            "@/modules/*": ["modules/*"],
            "@/public/*": ["public/*"],
            "@/utils/*": ["utils/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["next-env.d.ts", "@types/global.d.ts", "**/*.ts", "**/*.tsx", ".eslintrc.js", "postcss.config.js"]
}

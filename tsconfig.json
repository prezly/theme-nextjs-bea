{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/components": ["components/"],
      "@/components/*": ["components/*"],
      "@/contexts/*": ["contexts/*"],
      "@/hooks": ["hooks/"],
      "@/hooks/*": ["hooks/*"],
      "@/icons": ["icons/"],
      "@/modules/*": ["modules/*"],
      "@/public/*": ["public/*"],
      "@/utils": ["utils/"],
      "@/utils/*": ["utils/*"],
      "@/ui": ["ui/"]
    }
  },
  "include": [
    "custom-next-env.d.ts",
    "@types/*",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "*.config.js"
  ],
  "exclude": ["node_modules", "next-env.d.ts"]
}
